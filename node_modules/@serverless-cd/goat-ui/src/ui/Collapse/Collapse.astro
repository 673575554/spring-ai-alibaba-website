---
import { twMerge } from "tailwind-merge";
import type { Collapse } from "./types";
const { 
    focus = false,
    bordered = false,
    showIcon = false,
    classes={},
    title = "",
    content = "",
} = Astro.props as Collapse;

const {
    container: containerClass = "",
    title: titleClass = "",
    content: contentClass = "",
} = classes;

const attribute = focus? { tabindex: "0" } :{};
---

<div 
    class={twMerge(
        `collapse bg-base-200
        ${bordered? "border border-base-300" :""}
        ${showIcon ? 
                typeof showIcon === "boolean" ?"collapse-arrow":showIcon
            :""}
        `, 
        containerClass
    )}
    {...attribute}
>

    {focus? null: <input type="checkbox" /> }

    <div 
        class={twMerge("collapse-title text-xl font-medium", titleClass)}
    >
        {title}
    </div>

    <div 
        class={twMerge("collapse-content", contentClass)}
    > 
        {content}
    </div>
</div>