---
import { twMerge } from "tailwind-merge";
import { Props } from "./types";

const {
  tags,
  class: className = "text-sm not-content",
  tagClass = '',
	linkClass = ''

}: Props = Astro.props;

const list  = tags.map(v => {
  if(typeof v != 'string') {
    return v
  } else {
    return { tag: v }
  }
})
---

{
  tags && Array.isArray(tags) && (
    <>
      <ul class={className}>
        {list.map((item) => (
          <li class={twMerge("bg-gray-200 dark:bg-slate-700 inline-block mr-2 rtl:mr-0 rtl:ml-2 mb-2 py-0.5 px-2 lowercase font-medium", tagClass, item.tagClass || '')}>
            { item.href && !item.disenabled? (
              <a
                href={item.href}
                class={twMerge("text-muted dark:text-slate-300 hover:text-primary dark:hover:text-gray-200 no-underline", linkClass, item.linkClass || '')}
              >
                {item.tag}
              </a>             
            ) : (
              item.tag
            )}
          </li>
        ))}
      </ul>
    </>
  )
}
